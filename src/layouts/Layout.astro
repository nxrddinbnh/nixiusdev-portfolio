---
import Menu from '../components/Menu.astro';
import Footer from '../components/Footer.astro';

interface Props {
	title: string;
	description: string;
}

const { title, description} = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/nixiusdev-icon.svg" />
		<title>{title}</title>
	</head>
	<body>
		<Menu />
		<slot />
		<Footer />
	</body>
</html>
<style is:global>
	@import url('https://fonts.googleapis.com/css2?family=Lato:wght@300;400;700&display=swap');
	:root {
		color-scheme: light dark;
		--color-white-100 : #eeeef2;
		--color-white-200: #b2b4d3;
		--color-white-300: #868a9f;
		--color-violet-100: #c2c7e9;
		--color-violet-200: #818fe5;
		--color-violet-300: #0f1430;
		--color-violet-400: #1f2335;
		--color-linktree: #43e660;
	}
	::selection {
        color: white;
        background-color: var(--color-violet-200);
    }
	::-moz-selection {
        color: white;
        background-color: var(--color-violet-200);
    }
	html {
		font-family: 'Lato', system-ui, sans-serif;
		scroll-behavior: smooth;
	}
	@media (prefers-reduced-montion: reduce) {
		html {
			scroll-behavior: auto;
		}
	}
	body {
        position: relative;
        min-height: 100vh;
        background-color: #0f111a;
    }
	body::after {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-image: url('/grid.svg');
        background-position: center;
        opacity: 0.013;
        z-index: -1;
    }
	@media (max-width: 767px) {
        body::after {
            background-image: url('/grid-fill.svg');
        }
    }
	@font-face {
        font-family: 'DharmaGotic';
        src: url('/fonts/DharmaGothicE-ExBold.ttf') format('truetype');
    }
	@font-face {
        font-family: 'DharmaGotic-Regular';
        src: url('/fonts/DharmaGothicE-Regular.ttf') format('truetype');
    }
	.font-dharma-gothic{
		font-family: 'DharmaGotic', sans-serif;
	}
	.font-dharma-gothic-regular{
		font-family: 'DharmaGotic-Regular', sans-serif;
	}
	p {
        color: var(--color-white-300);
        margin-bottom: 10px;
        text-wrap: pretty;
    }
</style>